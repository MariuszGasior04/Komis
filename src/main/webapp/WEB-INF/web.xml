<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <welcome-file-list>
    <welcome-file>witaj</welcome-file>
  </welcome-file-list>

  <context-param>
    <param-name>dataSource</param-name>
    <param-value>jdbc:komis</param-value>
  </context-param>

  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>Komis</realm-name>
  </login-config>

  <security-constraint>
    <display-name>Strona hello</display-name>

    <web-resource-collection>
      <web-resource-name>hello</web-resource-name>
      <url-pattern>/witaj</url-pattern>
    </web-resource-collection>

    <auth-constraint>
      <role-name>user</role-name>
    </auth-constraint>

    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>

  </security-constraint>

  <security-role>
    <role-name>user</role-name>
  </security-role>

</web-app>
